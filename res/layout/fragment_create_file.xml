<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wildfire.CreateFile$PlaceholderFragment" >

		<TextView
		    android:id="@+id/create_file_title_id"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:text="@+string/create_file_title" />
    
        <TextView
            android:id="@+id/file_file_name_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_file_title_id"
            android:text="@+string/file_file_name_label" />
        
        <EditText
            android:id="@+id/file_file_name_input_id"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/file_file_name_label_id" 
            android:ems="10" >
            <requestFocus />
        </EditText>
        
        <TextView
            android:id="@+id/file_owner_label_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/file_file_name_input_id"
            android:text="@+string/file_owner_label" />

        <EditText
            android:id="@+id/file_owner_input_id"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file_owner_label_id"
            android:ems="10" />

        <Button
            android:id="@+id/create_file_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
			android:layout_below="@id/file_owner_input_id"
            android:onClick="create_file"
            android:text="@+string/create_file_button" />

</RelativeLayout>